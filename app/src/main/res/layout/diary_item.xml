<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="30dp"
    app:cardElevation="15dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/diary_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XXXX-XX-XX XX:XX"
            android:fontFamily="@font/gowundodum_regular"
            android:gravity="right"
            android:background="#FBE5D7"
            android:padding="13dp"/>

        <TextView
            android:id="@+id/diary_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textColor="@color/black"
            android:fontFamily="@font/gowundodum_regular"
            android:textSize="30dp"
            android:padding="13dp"
            android:background="#FBE5D7"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/diary_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/ic_baseline_local_see_24"
            android:padding="13dp"/>

        <TextView
            android:id="@+id/diary_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/gowundodum_regular"
            android:text="내용"
            android:textSize="18dp"
            android:padding="20dp"/>



    </LinearLayout>

</androidx.cardview.widget.CardView>